@page
@model CookingBakery.Pages.UserPost.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Reaction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Reaction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.AuthorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.AuthorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Category.Name)
        </dd>

        @foreach (var item in Model.Details)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Post.PostDetails)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Product.Name )

                @Html.DisplayFor(model => item.Quantity )
            </dd>
        }

    </dl>
</div>
<div>
    <a asp-page="./EditUserPost" asp-route-id="@Model.Post.PostId">Edit</a> |
    <a asp-page="./IndexUserPost">Back to List</a>
</div>
