@page
@model EventManagementFPT.Pages.ReportPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <h1>Edit</h1>

    <h4>Report</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Report.ReportId"/>
                <div class="form-group">
                    <label asp-for="Report.Name" class="control-label"></label>
                    <input asp-for="Report.Name" class="form-control"/>
                    <span asp-validation-for="Report.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Report.Content" class="control-label"></label>
                    <input asp-for="Report.Content" class="form-control"/>
                    <span asp-validation-for="Report.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Report.CreateDate" class="control-label"></label>
                    <input asp-for="Report.CreateDate" class="form-control"/>
                    <span asp-validation-for="Report.CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Report.Status" class="control-label"></label>
                    <select asp-for="Report.Status" class="form-control"></select>
                    <span asp-validation-for="Report.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Report.Author" class="control-label"></label>
                    <select asp-for="Report.Author" class="form-control" asp-items="ViewBag.Author"></select>
                    <span asp-validation-for="Report.Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Report.EventId" class="control-label"></label>
                    <select asp-for="Report.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                    <span asp-validation-for="Report.EventId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}