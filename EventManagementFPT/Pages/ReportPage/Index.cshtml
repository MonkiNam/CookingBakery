@page
@using BussinessObject.Models
@model CookingBakery.Pages.ReportPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container py-5">
    <h1>Reports</h1>

    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].CreateDate)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Report)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @{
                        switch (item.Status)
                        {
                            case ReportEnum.Unprocess:
                                <span class="d-flex align-items-center">
                                    <ion-icon name="ellipse" style="font-size: 16px; color: red;"> </ion-icon> @Html.DisplayFor(modelItem => item.Status)
                                </span>
                                break;
                            case ReportEnum.Processing:
                                <span class="d-flex align-items-center">
                                    <ion-icon name="ellipse" style="font-size: 16px; color: yellow;"> </ion-icon> @Html.DisplayFor(modelItem => item.Status)
                                </span>
                                break;
                            case ReportEnum.Processed:
                                <span class="d-flex align-items-center">
                                    <ion-icon name="ellipse" style="font-size: 16px; color: lawngreen;"> </ion-icon> @Html.DisplayFor(modelItem => item.Status)
                                </span>
                                break;
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.ReportId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ReportId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>