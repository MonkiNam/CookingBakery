@page
@model CookingBakery.Pages.VenuePage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container py-5">
    <h1>Venues</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venue[0].VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue[0].Status)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Venue)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.VenueId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.VenueId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.VenueId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>