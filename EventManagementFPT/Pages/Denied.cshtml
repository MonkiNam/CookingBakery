@page
@model EventManagementFPT.Pages.DeniedModel
@{
    ViewData["Title"] = "Denied";
    Layout = "";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<div class="container-fluid d-flex justify-content-center align-items-center flex-column min-vh-100">
    <img style="width: 100%; height: 100%; object-fit: contain; opacity: 0.15; position: absolute; z-index: -1;" src="~/image/Error.jpg" class="img-fluid" />
    <h1 class="font-weight-bolder text-uppercase text-danger display-1">403 Forbidden</h1>
    <h3 class="mb-4 font-weight-bold">You are not allowed to access this information</h3>
    @if(User.Identity.IsAuthenticated)
    {
        <a style="gap: 8px;" type="button" asp-page="/Index" class="btn btn-primary btn-lg d-flex align-items-center shadow-lg">Go back <ion-icon size="large" name="log-out-outline"></ion-icon></a>
    }
    else {
        <a style="gap: 8px;" type="button" asp-page="/Authentication/Index" class="btn btn-primary btn-lg d-flex align-items-center shadow-lg">Go back <ion-icon size="large" name="log-out-outline"></ion-icon></a>
    }
    
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
