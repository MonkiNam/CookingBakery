@page
@model CookingBakery.Pages.Home.Details

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row"> 
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="../image/@Model.Post.ImageUrl" class="img-responsive"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">@Model.Post.Title</h4>
                    <p>@Model.Post.Description</p>
                    <h2 class="mt-5">
                        @Model.Post.Reaction Likes
                    </h2>
                    <h3 class="box-title mt-5">Ingredients</h3>
                    <ul class="list-unstyled">
                        @foreach(var item in @Model.PostDetails)
                        {
                            <li>     - @item.Quantity @item.Product.Name</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>