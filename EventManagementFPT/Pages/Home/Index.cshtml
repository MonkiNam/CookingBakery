@page
@model EventManagementFPT.Pages.Home.Index

<!Doctype HTML>
<html lang="en">

<head>
    <title>Main page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="../wwwroot/css/shared.css"/>
    <link rel="stylesheet" href="../css/index.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
          integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
</head>

<body>

<!-- Main content -->
<div class="container-fluid mt-5 pl-5 pr-5 mb-5">
    <div class="row mr-4 ml-4">
        <div class="col-3">
            <div class="border rounded shadow p-4">
                <h3 class="text-center">
                    <ion-icon name="filter-outline"></ion-icon> Filter
                </h3>
                <form>
                    <p>
                        <label for="start-date" class="h5">From: </label>
                        <input id="start-date" type="datetime-local" class="form-control start-date"/>
                    </p>
                    <p class="mt-3">
                        <label for="end-date" class="h5">To: </label>
                        <input id="end-date" type="datetime-local" class="form-control start-date"/>
                    </p>
                    <hr/>
                    <p class="mb-3">
                        <label for="cat-select" class="h5">Category: </label>
                        <select class="custom-select" id="cat-select">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </p>
                    <hr/>
                    <button type="submit"
                            class="btn btn-outline-primary btn-block d-flex align-items-center justify-content-center">
                        <ion-icon class="mr-2" name="funnel-outline"></ion-icon>
                        <span>Filter</span>
                    </button>
                </form>
            </div>
        </div>
        <div class="col-9">
            <div class="border roudned shadow p-4">
                <h3 class="d-flex align-items-center">
                    New events
                    <span class="badge badge-danger ml-2">
                        <ion-icon name="flame-outline"></ion-icon>
                    </span>
                </h3>
                <div class="container-fluid mt-4">
                    <!-- New events -->
                    <div class="card-deck">
                        @foreach (var _event in Model.NewestEvent) {
                            <div class="card event">
                            <img src="../image/event.jpg" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title mb-4">@_event.Name</h5>
                                <div class="d-flex align-items-center mb-2">
                                    <ion-icon class="event-time" name="time-outline"></ion-icon>
                                    <span class="font-weight-bold ml-2 flex-grow-1">
                                        @_event.StartDate
                                    </span>
                                    <div class="d-flex align-items-center">
                                        <ion-icon class="event-time" name="people-outline"></ion-icon>
                                        <span class="font-weight-bold ml-2">
                                            @_event.Capacity
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="tag d-flex align-items-center rounded" id="location">
                                        <ion-icon name="location-outline"></ion-icon>@_event.Venue
                                    </span>
                                </div>
                            </div>
                            <a href="./Detail" asp-route-id="@_event.EventId" class="stretched-link"></a>
                        </div>
                        }
                    </div>
                    <!-- Event list -->
                    <hr class="mt-4 mb-4"/>
                    <div class="row row-cols-1 row-cols-md-3">
                        @foreach (var _event in Model.Event)
                        {
                            <div class="col mb-4">
                                <div class="card event">
                                    <img src="@_event.ImageUrl" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title mb-4">@_event.Name</h5>
                                        <div class="d-flex align-items-center mb-2">
                                            <ion-icon class="event-time" name="time-outline"></ion-icon>
                                            <span class="font-weight-bold ml-2 flex-grow-1">
                                                @_event.StartDate - @_event.EndDate
                                            </span>
                                            <div class="d-flex align-items-center">
                                                <ion-icon class="event-time" name="people-outline"></ion-icon>
                                                <span class="font-weight-bold ml-2">
                                                    Capacity: @_event.Capacity
                                                </span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <span class="tag d-flex align-items-center rounded" id="location">
                                                <ion-icon name="location-outline"></ion-icon>@_event.VenueId
                                            </span>
                                        </div>
                                    </div>
                                    <a href="#" class="stretched-link"></a>
                                </div>
                            </div>
                        }
                    </div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center pagination-lg">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change your password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="currentPassword">Current password</label>
                        <input type="password" class="form-control" id="currentPassword"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">New password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Re-enter password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-block mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src=" https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
        crossorigin="anonymous"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>